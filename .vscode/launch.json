{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "debug --release-version",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--release-version",
                
            ] 
        },
        {
            "name": "debug --help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--help",
                
            ] 
        },
        {
            "name": "debug --version",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--version",
                
            ] 
        },
        {
            "name": "debug install feature",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "install",
                "devcontainer-feature",
                "ghcr.io/devcontainers-contrib/features/bash-command:1.0.0",
                "--option",
                "command=\"pip3 install packaging==21.3\""
            ] 
        },
        {
            "name": "debug install apt-get",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "install",
                "apt-get",
                "wget",
            ] 
        },
        {
            "name": "debug install apt-get with ppa",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "install",
                "apt-get",
                "wget",
                "--ppa",
                "ppa:deadsnakes/ppa",
            ] 
        },
        {
            "name": "debug install gh-release",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dcontainer/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "sudo": true, 
            "args": [
                "install",
                "gh-release",
                "cli/cli",
                "gh",
                "--force"
            ] 
        },

        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "_PYTEST_RAISE": "1",
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}